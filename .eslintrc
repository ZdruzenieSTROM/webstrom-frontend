{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        // for what's included, check: https://github.com/facebook/create-react-app/blob/master/packages/eslint-config-react-app/index.js
        "react-app",
        "plugin:react/recommended"
    ],
    "rules": {
        "react/prop-types": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
